    "version": "2.0.0",
    "tasks": [
        {
            "label": "copy file to CIRCUITPY",
            "type": "shell",
            "command": "cp ${file} /Volumes/CIRCUITPY/",
            "problemMatcher": []
        },
        {
            "label": "copy all to CIRCUITPY",
            "type": "shell",
            "command": "cp ${workspaceFolder}/*.py /Volumes/CIRCUITPY/",
            "problemMatcher": []
        }

    ]
}
