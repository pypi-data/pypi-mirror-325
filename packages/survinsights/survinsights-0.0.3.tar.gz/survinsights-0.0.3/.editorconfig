# EditorConfig <https://editorconfig.org>

root = true

# Default
[*]
charset = utf-8
indent_style = space
indent_size = 4
insert_final_newline = true
trim_trailing_whitespace = true

# Markdown
[*.md]
trim_trailing_whitespace = false

# TOML
[*.toml]
indent_size = 2

# YAML
[*.yaml]
indent_size = 2
