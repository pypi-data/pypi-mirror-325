<odoo>
    <record
        id="account_invoice_report_hide_discounts_by_partner_view_partner_property_form"
        model="ir.ui.view"
    >
        <field
            name="name"
        >account.invoice.report.hide.discounts.by.partner.view.partner.property.form</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="account.view_partner_property_form" />
        <field name="arch" type="xml">
            <xpath expr="//group[@name='accounting_entries']" position='after'>
                <group>
                    <field
                        name="show_invoice_discounts"
                        attrs="{'readonly': [('parent_id','!=',False)]}"
                    />
                </group>
            </xpath>
        </field>
    </record>
</odoo>
