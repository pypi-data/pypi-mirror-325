<odoo>
    <record
        id="account_invoice_report_hide_discounts_by_partner_view_move_form"
        model="ir.ui.view"
    >
        <field
            name="name"
        >account.invoice.report.hide.discounts.by.partner.view.move.form</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form" />
        <field name="arch" type="xml">
            <xpath expr="//label[@for='invoice_date']" position='before'>

                <field name="show_discounts" />
            </xpath>
        </field>
    </record>
</odoo>
