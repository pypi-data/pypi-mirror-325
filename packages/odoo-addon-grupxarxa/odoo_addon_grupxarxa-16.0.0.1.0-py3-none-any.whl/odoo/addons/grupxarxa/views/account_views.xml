<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_invoice_tree" model="ir.ui.view">
            <field name="name">account.invoice.list.custom</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="account.view_invoice_tree"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='invoice_date_due']" position="attributes">
	            <attribute name="widget"/>
                </xpath>
            </field>
        </record>
	<record id="account_move_tree_view" model="ir.ui.view">
	    <field name="name">account.move.tree.custom</field>
	    <field name="model">account.move</field>
	    <field name="inherit_id" ref="account_move_fiscal_year.account_move_tree_view"/>
	    <field name="arch" type="xml">
		<xpath expr="//field[@name='date_range_fy_id']" position="attributes">
	            <attribute name="optional">hide</attribute>  	
	    	</xpath>
	    </field>
    	</record>
    </data>
</odoo>
