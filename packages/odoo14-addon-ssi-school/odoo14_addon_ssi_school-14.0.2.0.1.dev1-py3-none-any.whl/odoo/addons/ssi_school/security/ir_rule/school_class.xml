<odoo>
<record id="school_class_internal_user_rule" model="ir.rule">
    <field name="name">School Class - Internal Users</field>
    <field name="model_id" ref="model_school_class" />
    <field name="groups" eval="[(4, ref('base.group_user'))]" />
    <field name="domain_force">[
      ('user_id','=',user.id),
    ]</field>
    <field name="perm_unlink" eval="1" />
    <field name="perm_write" eval="1" />
    <field name="perm_read" eval="1" />
    <field name="perm_create" eval="1" />
</record>

<record id="school_class_company_rule" model="ir.rule">
    <field name="name">School Class - Responsible to company data</field>
    <field name="model_id" ref="model_school_class" />
    <field name="groups" eval="[(4, ref('school_class_company_group'))]" />
    <field name="domain_force">[('company_id','=',user.company_id.id)]</field>
    <field name="perm_unlink" eval="1" />
    <field name="perm_write" eval="1" />
    <field name="perm_read" eval="1" />
    <field name="perm_create" eval="1" />
</record>

<record id="school_class_companies_rule" model="ir.rule">
    <field
            name="name"
        >School Class - Responsible to company and all child companies data</field>
    <field name="model_id" ref="model_school_class" />
    <field name="groups" eval="[(4, ref('school_class_company_child_group'))]" />
    <field name="domain_force">[('company_id','in',user.company_ids.ids)]</field>
    <field name="perm_unlink" eval="1" />
    <field name="perm_write" eval="1" />
    <field name="perm_read" eval="1" />
    <field name="perm_create" eval="1" />
</record>

<record id="school_class_all_rule" model="ir.rule">
    <field name="name">School Class - All</field>
    <field name="model_id" ref="model_school_class" />
    <field name="groups" eval="[(4, ref('school_class_all_group'))]" />
    <field name="domain_force">[(1,'=',1)]</field>
    <field name="perm_unlink" eval="1" />
    <field name="perm_write" eval="1" />
    <field name="perm_read" eval="1" />
    <field name="perm_create" eval="1" />
</record>
</odoo>
