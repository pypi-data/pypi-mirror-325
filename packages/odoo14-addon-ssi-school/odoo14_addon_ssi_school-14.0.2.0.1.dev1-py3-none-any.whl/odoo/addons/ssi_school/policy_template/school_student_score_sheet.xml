<odoo>
<record id="policy_template_school_student_score_sheet" model="policy.template">
    <field name="name">Standard</field>
    <field name="model_id" ref="model_school_student_score_sheet" />
    <field
            name="state_field_id"
            search="[('model_id.model','=','school_student_score_sheet'),('name','=','state')]"
        />
    <field name="sequence" eval="100" />
    <field name="python_code">result=True</field>
</record>

<!-- Confirm -->
<record
        id="policy_template_school_student_score_sheet_confirm"
        model="policy.template_detail"
    >
    <field name="template_id" ref="policy_template_school_student_score_sheet" />
    <field
            name="field_id"
            search="[('model_id.model','=','school_student_score_sheet'),('name','=','confirm_ok')]"
        />
    <field name="restrict_state" eval="1" />
    <field
            name="state_ids"
            search="[('field_id.model_id.model','=','school_student_score_sheet'),('value','=','draft')]"
        />
    <field name="restrict_user" eval="1" />
    <field name="computation_method">use_group</field>
    <field
            name="group_ids"
            eval="[(6,0,[ref('school_student_score_sheet_user_group')])]"
        />
    <field name="restrict_additional" eval="0" />
</record>

