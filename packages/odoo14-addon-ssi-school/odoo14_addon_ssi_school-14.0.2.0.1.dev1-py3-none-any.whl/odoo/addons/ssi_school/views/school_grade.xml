<odoo>
<record id="school_grade_view_search" model="ir.ui.view">
    <field name="name">school_grade - search</field>
    <field name="model">school_grade</field>
    <field
            name="inherit_id"
            ref="ssi_master_data_mixin.mixin_master_data_view_search"
        />
    <field name="mode">primary</field>
    <field name="arch" type="xml">
        <data />
    </field>
</record>

<record id="school_grade_view_tree" model="ir.ui.view">
    <field name="name">school_grade -tree</field>
    <field name="model">school_grade</field>
    <field name="inherit_id" ref="ssi_master_data_mixin.mixin_master_data_view_tree" />
    <field name="mode">primary</field>
    <field name="arch" type="xml">
        <data>
            <xpath expr="//field[@name='code']" position="before">
                <field name="sequence" widget="handle" />
            </xpath>
            <xpath expr="//field[@name='name']" position="after">
                <field name="type_id" />
                <field name="previous_grade_id" />
                <field name="next_grade_id" />
            </xpath>
        </data>
    </field>
</record>

<record id="school_grade_view_form" model="ir.ui.view">
    <field name="name">school_grade - form</field>
    <field name="model">school_grade</field>
    <field name="inherit_id" ref="ssi_master_data_mixin.mixin_master_data_view_form" />
    <field name="mode">primary</field>
    <field name="arch" type="xml">
        <data>
            <xpath expr="//field[@name='active']" position="after">
                <field name="sequence" />
                <field name="type_id" />
                <field name="previous_grade_id" />
                <field name="next_grade_id" />
            </xpath>
        </data>
    </field>
</record>

<record id="school_grade_action" model="ir.actions.act_window">
    <field name="name">School Grades</field>
    <field name="type">ir.actions.act_window</field>
    <field name="res_model">school_grade</field>
    <field name="view_mode">tree,form</field>
</record>

<menuitem
        id="school_grade_menu"
        name="Grades"
        parent="menu_school_configuration"
        action="school_grade_action"
        groups="school_grade_group"
        sequence="102"
    />

</odoo>
