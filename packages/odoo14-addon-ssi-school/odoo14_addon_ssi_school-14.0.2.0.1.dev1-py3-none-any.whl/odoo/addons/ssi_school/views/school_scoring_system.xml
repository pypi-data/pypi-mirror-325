<odoo>
<record id="school_scoring_system_view_search" model="ir.ui.view">
    <field name="name">school_scoring_system - search</field>
    <field name="model">school_scoring_system</field>
    <field
            name="inherit_id"
            ref="ssi_master_data_mixin.mixin_master_data_view_search"
        />
    <field name="mode">primary</field>
    <field name="arch" type="xml">
        <data />
    </field>
</record>

<record id="school_scoring_system_view_tree" model="ir.ui.view">
    <field name="name">school_scoring_system -tree</field>
    <field name="model">school_scoring_system</field>
    <field name="inherit_id" ref="ssi_master_data_mixin.mixin_master_data_view_tree" />
    <field name="mode">primary</field>
    <field name="arch" type="xml">
        <data>
        </data>
    </field>
</record>

<record id="school_scoring_system_view_form" model="ir.ui.view">
    <field name="name">school_scoring_system - form</field>
    <field name="model">school_scoring_system</field>
    <field name="inherit_id" ref="ssi_master_data_mixin.mixin_master_data_view_form" />
    <field name="mode">primary</field>
    <field name="arch" type="xml">
        <data>
            <xpath expr="//page[1]" position="before">
                <page name="detail" string="Detail">
                    <group name="detail_1" colspan="4" col="2">
                        <field name="usable" />
                    </group>
                    <field name="detail_ids">
                        <tree editable="top">
                            <field name="sequence" widget="handle" />
                            <field name="score_type_id" />
                            <field name="percentage" />
                        </tree>
                    </field>
                </page>
            </xpath>
        </data>
    </field>
</record>

<record id="school_scoring_system_action" model="ir.actions.act_window">
    <field name="name">Scoring Systems</field>
    <field name="type">ir.actions.act_window</field>
    <field name="res_model">school_scoring_system</field>
    <field name="view_mode">tree,form</field>
</record>

<menuitem
        id="school_scoring_system_menu"
        name="Scoring Systems"
        parent="menu_school_configuration"
        action="school_scoring_system_action"
        groups="school_scoring_system_group"
        sequence="102"
    />

</odoo>
