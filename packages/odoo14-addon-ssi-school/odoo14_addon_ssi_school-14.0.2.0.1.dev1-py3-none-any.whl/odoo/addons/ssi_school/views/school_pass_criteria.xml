<odoo>
<record id="school_pass_criteria_view_search" model="ir.ui.view">
    <field name="name">school_pass_criteria - search</field>
    <field name="model">school_pass_criteria</field>
    <field
            name="inherit_id"
            ref="ssi_master_data_mixin.mixin_master_data_view_search"
        />
    <field name="mode">primary</field>
    <field name="arch" type="xml">
        <data />
    </field>
</record>

<record id="school_pass_criteria_view_tree" model="ir.ui.view">
    <field name="name">school_pass_criteria -tree</field>
    <field name="model">school_pass_criteria</field>
    <field name="inherit_id" ref="ssi_master_data_mixin.mixin_master_data_view_tree" />
    <field name="mode">primary</field>
    <field name="arch" type="xml">
        <data>
        </data>
    </field>
</record>

<record id="school_pass_criteria_view_form" model="ir.ui.view">
    <field name="name">school_pass_criteria - form</field>
    <field name="model">school_pass_criteria</field>
    <field name="inherit_id" ref="ssi_master_data_mixin.mixin_master_data_view_form" />
    <field name="mode">primary</field>
    <field name="arch" type="xml">
        <data>
            <xpath expr="//page[1]" position="before">
                <page name="code" string="Python Code">
                    <field name="python_code" widget="ace" />
                </page>
            </xpath>
        </data>
    </field>
</record>

<record id="school_pass_criteria_action" model="ir.actions.act_window">
    <field name="name">Pass Criteria</field>
    <field name="type">ir.actions.act_window</field>
    <field name="res_model">school_pass_criteria</field>
    <field name="view_mode">tree,form</field>
</record>

<menuitem
        id="school_pass_criteria_menu"
        name="Pass Criteria"
        parent="menu_school_configuration"
        action="school_pass_criteria_action"
        groups="school_pass_criteria_group"
        sequence="101"
    />

</odoo>
