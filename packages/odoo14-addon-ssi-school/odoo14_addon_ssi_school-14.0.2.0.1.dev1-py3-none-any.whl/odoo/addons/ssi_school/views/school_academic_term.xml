<odoo>
<record id="school_academic_term_view_search" model="ir.ui.view">
    <field name="name">school_academic_term - search</field>
    <field name="model">school_academic_term</field>
    <field
            name="inherit_id"
            ref="ssi_master_data_mixin.mixin_master_data_view_search"
        />
    <field name="mode">primary</field>
    <field name="arch" type="xml">
        <data />
    </field>
</record>

<record id="school_academic_term_view_tree" model="ir.ui.view">
    <field name="name">school_academic_term -tree</field>
    <field name="model">school_academic_term</field>
    <field name="inherit_id" ref="ssi_master_data_mixin.mixin_master_data_view_tree" />
    <field name="mode">primary</field>
    <field name="arch" type="xml">
        <data>
            <xpath expr="//field[@name='name']" position="after">
                <field name="year_id" />
                <field name="date_start" />
                <field name="date_end" />
                <field name="first_term" />
                <field name="last_term" />
                <field name="state" />
            </xpath>
        </data>
    </field>
</record>

<record id="school_academic_term_view_form" model="ir.ui.view">
    <field name="name">school_academic_term - form</field>
    <field name="model">school_academic_term</field>
    <field name="inherit_id" ref="ssi_master_data_mixin.mixin_master_data_view_form" />
    <field name="mode">primary</field>
    <field name="arch" type="xml">
        <data>
            <xpath expr="//header" position="inside">
                <button
                        name="action_open"
                        string="Start"
                        type="object"
                        class="oe_highlight"
                        attrs="{'invisible':[('state','!=','draft')]}"
                    />
                <button
                        name="action_done"
                        string="Done"
                        type="object"
                        class="oe_highlight"
                        attrs="{'invisible':[('state','!=','open')]}"
                    />
                <button
                        name="action_restart"
                        string="Restart"
                        type="object"
                        class="oe_highlight"
                        attrs="{'invisible':[('state','=','draft')]}"
                    />
                <button
                        name="action_open_enrollment"
                        string="Open Enrollment"
                        type="object"
                        class="oe_highlight"
                        attrs="{'invisible':[('enrollment_state','=','open')]}"
                    />
                <button
                        name="action_close_enrollment"
                        string="Close Enrollment"
                        type="object"
                        class="oe_highlight"
                        attrs="{'invisible':[('enrollment_state','=','close')]}"
                    />
                <field name="state" widget="statusbar" />
            </xpath>
            <xpath expr="//field[@name='name']" position="after">
                <field name="year_id" />
                <field name="date_start" />
                <field name="date_end" />
                <field name="first_term" />
                <field name="last_term" />
            </xpath>
            <xpath expr="//page[1]" position="before">
                <page name="enrollment" string="Enrollment">
                    <group name="enrollment_1" colspan="4" col="2">
                        <field name="enrollment_state" />
                    </group>
                </page>
            </xpath>
        </data>
    </field>
</record>

<record id="school_academic_term_action" model="ir.actions.act_window">
    <field name="name">Academic Terms</field>
    <field name="type">ir.actions.act_window</field>
    <field name="res_model">school_academic_term</field>
    <field name="view_mode">tree,form</field>
</record>

<menuitem
        id="school_academic_term_menu"
        name="Academic Terms"
        parent="menu_school_configuration"
        action="school_academic_term_action"
        groups="school_academic_term_group"
        sequence="105"
    />

</odoo>
