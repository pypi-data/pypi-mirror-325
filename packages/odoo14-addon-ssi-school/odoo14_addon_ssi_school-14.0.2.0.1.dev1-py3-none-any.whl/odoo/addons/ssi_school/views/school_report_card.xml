<odoo>
    <record id="school_report_card_view_search" model="ir.ui.view">
        <field name="name">school_report_card - search</field>
        <field name="model">school_report_card</field>
    <field
            name="inherit_id"
            ref="ssi_transaction_mixin.mixin_transaction_view_search"
        />
    <field name="mode">primary</field>
    <field name="arch" type="xml">
        <data>
        </data>
    </field>
</record>

<record id="school_report_card_view_tree" model="ir.ui.view">
    <field name="name">school_report_card - tree</field>
    <field name="model">school_report_card</field>
    <field name="mode">primary</field>
    <field name="inherit_id" ref="ssi_transaction_mixin.mixin_transaction_view_tree" />
    <field name="arch" type="xml">
        <data>
            <xpath expr="//field[@name='company_id']" position="after">
                <field name="date" />
                <field name="student_id" />
                <field name="academic_year_id" />
                <field name="academic_term_id" />
                <field name="grade_type_id" />
                <field name="grade_id" />
            </xpath>
        </data>
    </field>
</record>

<record id="school_report_card_view_form" model="ir.ui.view">
    <field name="name">school_report_card - form</field>
    <field name="model">school_report_card</field>
    <field name="mode">primary</field>
    <field name="inherit_id" ref="ssi_transaction_mixin.mixin_transaction_view_form" />
    <field name="arch" type="xml">
        <data>
            <xpath expr="//field[@name='user_id']" position="after">
                <field name="academic_year_id" />
                <field
                        name="academic_term_id"
                        domain="[('year_id','=',academic_year_id)]"
                    />
                <field name="last_term" invisible="1" />
                <field name="grade_type_id" />
                <field name="grade_id" domain="[('type_id','=',grade_type_id)]" />
                <field name="student_id" />
                <field name="enrollment_id" />
            </xpath>
            <xpath expr="//group[@name='header_right']" position="inside">
                <field name="date" />
            </xpath>
            <xpath expr="//page[1]" position="before">
                <page name="curiculum" string="Curiculum">
                    <group name="curiculum_1" colspan="4" col="2">
                        <field
                                name="curiculum_id"
                                domain="[('state','=','open'),('grade_type_id','=',grade_type_id)]"
                            />
                    </group>
                    <field name="class_assignment_ids">
                        <tree editable="top">
                            <field name="subject_id" />
                            <field name="score" />
                        </tree>
                    </field>
                </page>
                <page
                        name="pass"
                        string="Pass/Faill to Next Grade"
                        attrs="{'invisible':[('last_term','=',False)]}"
                    >
                    <group name="pass_1" colspan="4" col="2">
                        <field name="auto_pass" />
                        <field name="override_pass_result" />
                        <field name="override_reason" />
                        <field name="final_pass" />
                    </group>
                </page>
            </xpath>
        </data>
    </field>
</record>

<record id="school_report_card_action" model="ir.actions.act_window">
    <field name="name">Report Cards</field>
    <field name="type">ir.actions.act_window</field>
    <field name="res_model">school_report_card</field>
    <field name="view_mode">tree,form</field>
</record>

<menuitem
        id="school_report_card_menu"
        name="Report Cards"
        parent="ssi_school.menu_school_classroom"
        action="school_report_card_action"
        groups="school_report_card_viewer_group"
        sequence="140"
    />

</odoo>
