<odoo>
    <record id="school_student_score_sheet_view_search" model="ir.ui.view">
        <field name="name">school_student_score_sheet - search</field>
        <field name="model">school_student_score_sheet</field>
    <field
            name="inherit_id"
            ref="ssi_transaction_mixin.mixin_transaction_view_search"
        />
    <field name="mode">primary</field>
    <field name="arch" type="xml">
        <data>
        </data>
    </field>
</record>

<record id="school_student_score_sheet_view_tree" model="ir.ui.view">
    <field name="name">school_student_score_sheet - tree</field>
    <field name="model">school_student_score_sheet</field>
    <field name="mode">primary</field>
    <field name="inherit_id" ref="ssi_transaction_mixin.mixin_transaction_view_tree" />
    <field name="arch" type="xml">
        <data>
            <xpath expr="//field[@name='company_id']" position="after">
                <field name="date" />
                <field name="academic_year_id" />
                <field name="academic_term_id" />
                <field name="grade_type_id" />
                <field name="grade_id" />
                <field name="class_id" />
                <field name="teacher_id" />
                <field name="score_type_id" />
            </xpath>
        </data>
    </field>
</record>

<record id="school_student_score_sheet_view_form" model="ir.ui.view">
    <field name="name">school_student_score_sheet - form</field>
    <field name="model">school_student_score_sheet</field>
    <field name="mode">primary</field>
    <field name="inherit_id" ref="ssi_transaction_mixin.mixin_transaction_view_form" />
    <field name="arch" type="xml">
        <data>
            <xpath expr="//field[@name='user_id']" position="after">
                <field name="academic_year_id" />
                <field
                        name="academic_term_id"
                        domain="[('year_id','=',academic_year_id)]"
                    />
                <field name="grade_type_id" />
                <field name="grade_id" domain="[('type_id','=',grade_type_id)]" />
                <field name="class_id" />
                <field name="teacher_id" />
                <field name="score_type_id" />
            </xpath>
            <xpath expr="//group[@name='header_right']" position="inside">
                <field name="date" />
            </xpath>
            <xpath expr="//page[1]" position="before">
                <page name="score" string="Scores">
                    <button
                            name="action_load_student_score"
                            string="Load Student Score"
                            icon="gtk-gear"
                            class="oe_highlight"
                            attrs="{'invisible': [('state','!=','open')]}"
                        />
                    <field name="score_ids">
                        <tree editable="top" create="false" delete="false">
                            <field name="class_assignment_id" invisible="1" />
                            <field name="student_id" />
                            <field name="score" />
                            <field name="percentage" />
                            <field name="final_score" />
                        </tree>
                    </field>
                </page>
            </xpath>
        </data>
    </field>
</record>

<record id="school_student_score_sheet_action" model="ir.actions.act_window">
    <field name="name">Student Score Sheets</field>
    <field name="type">ir.actions.act_window</field>
    <field name="res_model">school_student_score_sheet</field>
    <field name="view_mode">tree,form</field>
</record>

<menuitem
        id="school_student_score_sheet_menu"
        name="Student Score Sheets"
        parent="ssi_school.menu_school_classroom"
        action="school_student_score_sheet_action"
        groups="school_student_score_sheet_viewer_group"
        sequence="130"
    />

</odoo>
