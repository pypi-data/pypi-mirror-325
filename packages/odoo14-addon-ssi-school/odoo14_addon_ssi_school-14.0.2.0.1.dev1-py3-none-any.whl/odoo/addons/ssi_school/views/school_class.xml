<odoo>
    <record id="school_class_view_search" model="ir.ui.view">
        <field name="name">school_class - search</field>
        <field name="model">school_class</field>
    <field
            name="inherit_id"
            ref="ssi_transaction_mixin.mixin_transaction_view_search"
        />
    <field name="mode">primary</field>
    <field name="arch" type="xml">
        <data>
        </data>
    </field>
</record>

<record id="school_class_view_tree" model="ir.ui.view">
    <field name="name">school_class - tree</field>
    <field name="model">school_class</field>
    <field name="mode">primary</field>
    <field name="inherit_id" ref="ssi_transaction_mixin.mixin_transaction_view_tree" />
    <field name="arch" type="xml">
        <data>
            <xpath expr="//field[@name='company_id']" position="after">
                <field name="date" />
                <field name="academic_year_id" />
                <field name="academic_term_id" />
                <field name="grade_type_id" />
                <field name="grade_id" />
                <field name="subject_id" />
                <field name="teacher_id" />
                <field name="class_capacity" optional="hide" />
                <field name="num_of_student" optional="hide" />
                <field name="seat_avalilable" optional="show" sum="Seat Available" />
            </xpath>
        </data>
    </field>
</record>

<record id="school_class_view_form" model="ir.ui.view">
    <field name="name">school_class - form</field>
    <field name="model">school_class</field>
    <field name="mode">primary</field>
    <field name="inherit_id" ref="ssi_transaction_mixin.mixin_transaction_view_form" />
    <field name="arch" type="xml">
        <data>
            <xpath expr="//field[@name='user_id']" position="after">
                <field name="academic_year_id" />
                <field
                        name="academic_term_id"
                        domain="[('year_id','=',academic_year_id),('state','=','draft')]"
                    />
                <field name="grade_type_id" />
                <field name="grade_id" domain="[('type_id','=',grade_type_id)]" />
                <field
                        name="curiculum_id"
                        domain="[('state','=','open'),('grade_type_id','=',grade_type_id)]"
                    />
            </xpath>
            <xpath expr="//group[@name='header_right']" position="inside">
                <field name="subject_id" />
                <field name="teacher_id" />
                <field name="scoring_system_id" />
                <field name="date" />
            </xpath>
            <xpath expr="//page[1]" position="before">
                <page name="student" string="Student">
                    <group name="student_1" colspan="4" col="2">
                        <field name="class_capacity" />
                        <field name="num_of_student" />
                        <field name="seat_avalilable" />
                    </group>
                    <button
                            name="action_create_score_sheet"
                            type="object"
                            icon="fa-gear"
                            class="oe_highlight"
                            string="Create Score Sheet"
                        />
                    <field name="class_assignment_ids">
                        <tree>
                            <field name="enrollment_id" />
                            <field name="student_id" />
                            <field name="score" />
                            <button
                                    name="action_load_assignment"
                                    type="object"
                                    icon="fa-gear"
                                    class="oe_highlight"
                                    help="Load Assignment"
                                />


                        </tree>
                    </field>
                </page>
            </xpath>
        </data>
    </field>
</record>

<record id="school_class_action" model="ir.actions.act_window">
    <field name="name">Classes</field>
    <field name="type">ir.actions.act_window</field>
    <field name="res_model">school_class</field>
    <field name="view_mode">tree,form</field>
</record>

<menuitem
        id="school_class_menu"
        name="Classes"
        parent="ssi_school.menu_school_classroom"
        action="school_class_action"
        groups="school_class_viewer_group"
        sequence="120"
    />

</odoo>
