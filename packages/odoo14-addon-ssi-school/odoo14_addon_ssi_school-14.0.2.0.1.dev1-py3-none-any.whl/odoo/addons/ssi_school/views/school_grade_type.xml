<odoo>
<record id="school_grade_type_view_search" model="ir.ui.view">
    <field name="name">school_grade_type - search</field>
    <field name="model">school_grade_type</field>
    <field
            name="inherit_id"
            ref="ssi_master_data_mixin.mixin_master_data_view_search"
        />
    <field name="mode">primary</field>
    <field name="arch" type="xml">
        <data />
    </field>
</record>

<record id="school_grade_type_view_tree" model="ir.ui.view">
    <field name="name">school_grade_type -tree</field>
    <field name="model">school_grade_type</field>
    <field name="inherit_id" ref="ssi_master_data_mixin.mixin_master_data_view_tree" />
    <field name="mode">primary</field>
    <field name="arch" type="xml">
        <data>
            <xpath expr="//field[@name='code']" position="before">
                <field name="sequence" widget="handle" />
            </xpath>
        </data>
    </field>
</record>

<record id="school_grade_type_view_form" model="ir.ui.view">
    <field name="name">school_grade_type - form</field>
    <field name="model">school_grade_type</field>
    <field name="inherit_id" ref="ssi_master_data_mixin.mixin_master_data_view_form" />
    <field name="mode">primary</field>
    <field name="arch" type="xml">
        <data>
            <xpath expr="//field[@name='active']" position="after">
                <field name="sequence" />
            </xpath>
        </data>
    </field>
</record>

<record id="school_grade_type_action" model="ir.actions.act_window">
    <field name="name">School Grade Types</field>
    <field name="type">ir.actions.act_window</field>
    <field name="res_model">school_grade_type</field>
    <field name="view_mode">tree,form</field>
</record>

<menuitem
        id="school_grade_type_menu"
        name="Grade Types"
        parent="menu_school_configuration"
        action="school_grade_type_action"
        groups="school_grade_type_group"
        sequence="102"
    />

</odoo>
