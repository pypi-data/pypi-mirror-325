<odoo>
<record id="school_academic_year_view_search" model="ir.ui.view">
    <field name="name">school_academic_year - search</field>
    <field name="model">school_academic_year</field>
    <field
            name="inherit_id"
            ref="ssi_master_data_mixin.mixin_master_data_view_search"
        />
    <field name="mode">primary</field>
    <field name="arch" type="xml">
        <data />
    </field>
</record>

<record id="school_academic_year_view_tree" model="ir.ui.view">
    <field name="name">school_academic_year -tree</field>
    <field name="model">school_academic_year</field>
    <field name="inherit_id" ref="ssi_master_data_mixin.mixin_master_data_view_tree" />
    <field name="mode">primary</field>
    <field name="arch" type="xml">
        <data>
            <xpath expr="//field[@name='name']" position="after">
                <field name="date_start" />
                <field name="date_end" />
            </xpath>
        </data>
    </field>
</record>

<record id="school_academic_year_view_form" model="ir.ui.view">
    <field name="name">school_academic_year - form</field>
    <field name="model">school_academic_year</field>
    <field name="inherit_id" ref="ssi_master_data_mixin.mixin_master_data_view_form" />
    <field name="mode">primary</field>
    <field name="arch" type="xml">
        <data>
            <xpath expr="//field[@name='name']" position="after">
                <field name="date_start" />
                <field name="date_end" />
            </xpath>
            <xpath expr="//page[1]" position="before">
                <page name="term" string="Terms">
                    <group name="term_1" colspan="4" col="2">
                        <field name="first_term_id" />
                        <field name="last_term_id" />
                    </group>
                    <field name="term_ids" />
                </page>
            </xpath>
        </data>
    </field>
</record>

<record id="school_academic_year_action" model="ir.actions.act_window">
    <field name="name">Academic Years</field>
    <field name="type">ir.actions.act_window</field>
    <field name="res_model">school_academic_year</field>
    <field name="view_mode">tree,form</field>
</record>

<menuitem
        id="school_academic_year_menu"
        name="Academic Years"
        parent="menu_school_configuration"
        action="school_academic_year_action"
        groups="school_academic_year_group"
        sequence="105"
    />

</odoo>
