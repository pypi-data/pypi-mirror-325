<odoo>
    <record
        id="sale_order_report_hide_discounts_by_partner_view_order_form"
        model="ir.ui.view"
    >
        <field
            name="name"
        >sale.order.report.hide.discounts.by.partner.view.order.form</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form" />
        <field name="arch" type="xml">
            <xpath expr="//field[@name='validity_date']" position='before'>
                <field name="show_discounts" />
            </xpath>
        </field>
    </record>
</odoo>
