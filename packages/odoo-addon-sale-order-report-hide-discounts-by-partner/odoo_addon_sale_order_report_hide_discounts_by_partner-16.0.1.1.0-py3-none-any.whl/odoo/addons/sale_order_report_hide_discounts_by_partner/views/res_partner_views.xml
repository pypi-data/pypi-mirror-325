<odoo>
    <record
        id="sale_order_report_hide_discounts_by_partner_view_partner_property_form"
        model="ir.ui.view"
    >
        <field
            name="name"
        >sale.order.report.hide.discounts.by.partner.view.partner.property.form</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_form" />
        <field name="arch" type="xml">
            <xpath expr="//group[@name='sale']" position='inside'>
                <field
                    name="show_sale_discounts"
                    attrs="{'readonly': [('parent_id','!=',False)]}"
                />
            </xpath>
        </field>
    </record>
</odoo>
